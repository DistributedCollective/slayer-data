{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/DistributedCollective/slayer-data/main/schemas/money-market.schema.json",
  "title": "Money Market Pool List",
  "description": "Object with a single `items` array containing pool definitions.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "const": "https://raw.githubusercontent.com/DistributedCollective/slayer-data/main/schemas/money-market.schema.json",
      "description": "Schema version URL."
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/pool" },
      "additionalItems": false
    }
  },
  "required": ["items"],
  "additionalProperties": false,

  "$defs": {
    "pool": {
      "type": "object",
      "title": "Pool",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable name of the pool."
        },
        "logoURI": {
          "type": "string",
          "format": "uri",
          "description": "Public URL to a pool logo image."
        },
        "address": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]{40}$",
          "description": "Pool address"
        },
        "wethGateway": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]{40}$",
          "description": "WETH Gateway address"
        },
        "uiPoolDataProvider": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]{40}$",
          "description": "ui Pool Data Provider address"
        },
        "poolAddressesProvider": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]{40}$",
          "description": "Pool Addresses Provider address"
        },
        "variableDebtEth": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]{40}$",
          "description": "Variable Debt ETH address"
        },
        "weth": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]{40}$",
          "description": "WETH address"
        },
        "treasury": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]{40}$",
          "description": "Treasury address"
        }
      },
      "required": [
        "name",
        "address",
        "wethGateway",
        "uiPoolDataProvider",
        "poolAddressesProvider",
        "variableDebtEth",
        "weth",
        "treasury"
      ],
      "additionalProperties": false
    }
  }
}
