{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/DistributedCollective/slayer-data/main/schemas/tokens.schema.json",
  "title": "Token List",
  "description": "Object with a single `items` array containing token definitions.",
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/token" },
      "additionalItems": false
    }
  },
  "required": ["items"],
  "additionalProperties": false,

  "$defs": {
    "token": {
      "type": "object",
      "title": "Token",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable token name."
        },
        "address": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]{40}$",
          "description": "20-byte hex address with 0x prefix (EVM)."
        },
        "symbol": {
          "type": "string",
          "minLength": 1,
          "maxLength": 32,
          "description": "Ticker symbol (e.g., RBTC, SOV)."
        },
        "decimals": {
          "type": "integer",
          "minimum": 0,
          "maximum": 38,
          "description": "Decimal precision."
        },
        "logoURI": {
          "type": "string",
          "format": "uri",
          "description": "Public URL to a token logo image."
        }
      },
      "required": ["name", "address", "symbol", "decimals", "logoURI"],
      "additionalProperties": false
    }
  }
}
